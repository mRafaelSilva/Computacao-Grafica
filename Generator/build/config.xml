<world>
  <window width="800" height="800" />
  <camera>
    <position x="40" y="60" z="40" />
    <lookAt x="0" y="0" z="0" />
    <up x="0" y="1" z="0" />
    <projection fov="60" near="1" far="1500" />
  </camera>

  <group>
    <!-- Sol -->
    <transform>
      <scale x="24" y="24" z="24"/>
    </transform>
    <models>
      <model file="sol.3d">
	      <color r="1.0" g="1.0" b="0.0"/>
      </model>
    </models>

    <!-- Mercúrio -->
    <group>
      <transform>
        <rotate angle="20" x="0" y="1" z="0"/>
        <translate x="8" y="0" z="0"/>
        <rotate angle="0.1" x="0" y="0" z="1"/>
        <scale x="0.3" y="0.3" z="0.3"/>
      </transform>
      <models>
        <model file="mercurio.3d">
		      <color r="0.8" g="0.8" b="0.8"/>
        </model>
      </models>
    </group>

    <!-- Vénus -->
    <group>
      <transform>
        <rotate angle="60" x="0" y="1" z="0"/>
        <translate x="10" y="0" z="0"/>
        <rotate angle="177" x="0" y="0" z="1"/>
        <scale x="0.5" y="0.5" z="0.5"/>
      </transform>
      <models>
        <model file="venus.3d">
		      <color r="1.0" g="0.4" b="0.0"/>
        </model>
      </models>
    </group>

    <!-- Terra -->
    <group>
      <transform>
        <rotate angle="100" x="0" y="1" z="0"/>
        <translate x="12" y="0" z="0"/>
        <rotate angle="23" x="0" y="0" z="1"/>
        <scale x="0.6" y="0.6" z="0.6"/>
      </transform>
      <models>
        <model file="terra.3d">
		      <color r="0.21" g="0.20" b="0.62"/>
        </model>
      </models>

      <!-- Lua -->
      <group>
        <transform>
          <rotate angle="270" x="0" y="1" z="0"/>
          <translate x="2" y="0" z="0"/>
          <scale x="0.30" y="0.30" z="0.30"/>
        </transform>
        <models>
          <model file="lua.3d">
		        <color r="0.9" g="0.9" b="0.9"/>
          </model>
        </models>
      </group>
    </group>

    <!-- Marte -->
    <group>
      <transform>
        <rotate angle="140" x="0" y="1" z="0"/>
        <translate x="14" y="0" z="0"/>
        <rotate angle="25" x="0" y="0" z="1"/>
        <scale x="0.4" y="0.4" z="0.4"/>
      </transform>
      <models>
        <model file="marte.3d">
		      <color r="0.76" g="0.54" b="0.40"/>
        </model>
      </models>
    </group>

    <!-- Júpiter -->
    <group>
      <transform>
        <rotate angle="190" x="0" y="1" z="0"/>
        <translate x="17" y="0" z="0"/>
        <rotate angle="3" x="0" y="0" z="1"/>
        <scale x="1.2" y="1.2" z="1.2"/>
      </transform>
      <models>
        <model file="jupiter.3d">
		      <color r="1.0" g="0.909" b="0.819"/>
        </model>
      </models>
    </group>

    <!-- Saturno -->
    <group>
      <transform>
        <rotate angle="240" x="0" y="1" z="0"/>
        <translate x="21" y="0" z="0"/>
        <rotate angle="27" x="0" y="0" z="1"/>
        <scale x="1.0" y="1.0" z="1.0"/>
      </transform>

      <!-- Saturno (o planeta) -->
      <models>
        <model file="saturno.3d">
          <color r="0.849" g="0.81" b="0.89"/>
        </model>
      </models>

    <!-- Anéis (grupo separado) -->
    <group>
      <transform>
        <translate x="0" y="0.01" z="0"/> <!-- ↑ ligeira elevação -->
        <scale x="1.3" y="1.0" z="1.3"/>   <!-- opcional: escalar os anéis -->
      </transform>
        <models>
          <model file="aneis.3d">
            <color r="0.96" g="0.64" b="0.38"/>
          </model>
        </models>
      </group>
    </group>


    <!-- Úrano -->
    <group>
      <transform>
        <rotate angle="290" x="0" y="1" z="0"/>
        <translate x="24" y="0" z="0"/>
        <rotate angle="98" x="0" y="0" z="1"/>
        <scale x="0.9" y="0.9" z="0.9"/>
      </transform>
      <models>
        <model file="urano.3d">
          <color r="0.745" g="0.89" b="0.90"/>
        </model>
      </models>
    </group>

    <!-- Neptuno -->
    <group>
      <transform>
        <rotate angle="330" x="0" y="1" z="0"/>
        <translate x="26" y="0" z="0"/>
        <rotate angle="31" x="0" y="0" z="1"/>
        <scale x="0.8" y="0.8" z="0.8"/>
      </transform>
      <models>
        <model file="neptuno.3d">
          <color r="0.133" g="0.133" b="0.45"/>
        </model>
      </models>
    </group>

	  <!-- Cometa -->
	  <group>
		  <transform>
			  <!-- Define a orbital path different from the planets -->
			  <rotate angle="170" x="0" y="1" z="0"/>
			  <!-- Place it at a distance from the sun -->
			  <translate x="18" y="2" z="0"/>
			  <!-- Orientation of the comet -->
			  <rotate angle="45" x="1" y="0" z="0"/>
			  <!-- Size adjustment -->
			  <scale x="0.5" y="0.5" z="0.5"/>
		  </transform>
		  <models>
			  <model file="cometa.3d">
				  <color r="0.8" g="0.8" b="1.0"/>
			  </model>
		  </models>
	  </group>
  </group>
</world>
